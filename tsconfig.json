{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "utils": ["./src/utils"],
      "lib": ["./src/lib"],
      "components": ["./src/components"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
